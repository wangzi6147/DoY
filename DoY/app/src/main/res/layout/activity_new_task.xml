<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/v_activity_new_left_blank"
        android:focusable="true"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/activity_row_horizontal_padding_middle">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_activity_new_title"
            android:hint="这里写标题"
            android:singleLine="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/et_activity_new_content"
            android:hint="这里写内容"
            android:gravity="left"
            android:layout_marginTop="@dimen/activity_row_vertical_padding_middle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/activity_icon_size_middle"
                android:layout_height="@dimen/activity_icon_size_middle"
                android:src="@drawable/icon_coins"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_activity_new_value"
                android:layout_marginLeft="@dimen/activity_row_horizontal_padding_middle"
                android:hint="这里写B值"
                android:singleLine="true"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_row_height_middle"
            android:id="@+id/bt_activity_new_submit"
            android:background="@color/main_orange"
            android:text="确认提交"/>

    </LinearLayout>

</LinearLayout>