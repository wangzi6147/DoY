<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_row_height_middle"
        android:id="@+id/rl_activity_base_topbar"
        android:paddingLeft="@dimen/activity_row_horizontal_padding_middle"
        android:paddingRight="@dimen/activity_row_horizontal_padding_middle"
        android:background="@color/main_orange">

        <ImageView
            android:layout_width="@dimen/activity_icon_size_middle"
            android:layout_height="@dimen/activity_icon_size_middle"
            android:id="@+id/iv_activity_base_topbar_left"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_coins"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_row_height_middle"
            android:textSize="@dimen/activity_text_size_middle"
            android:textColor="@color/white"
            android:text="50"
            android:id="@+id/tv_activity_base_topbar_left"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/iv_activity_base_topbar_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_row_height_middle"
            android:textSize="@dimen/activity_text_size_large"
            android:textColor="@color/white"
            android:text="DoY"
            android:id="@+id/tv_activity_base_topbar_center"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_row_height_middle"
            android:textSize="@dimen/activity_text_size_middle"
            android:textColor="@color/white"
            android:id="@+id/tv_activity_base_topbar_right"
            android:gravity="center_vertical"
            android:text="@string/activity_new"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_base_activity_content_view"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>